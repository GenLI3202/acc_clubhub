---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
import type { Locale } from '../lib/i18n';

interface Props {
  title: string;
  lang?: Locale;
}

const { title, lang = 'zh' } = Astro.props;
const currentPath = Astro.url.pathname;
const isHome = currentPath === `/${lang}` || currentPath === `/${lang}/`;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | ACC ClubHub</title>
    <link rel="icon" type="image/jpeg" href="/images/logo.jpg" />
  </head>
  <body>
    <Header lang={lang} />
    <main class:list={{ 'with-search-gap': !isHome }}>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  /* 
     Non-home pages need extra top padding because the search bar 
     is position: absolute (floating) and hangs 100% + 20px below 
     the 70px header.
     Header ~72px + Search hangs ~60px = ~132px needed.
     Default main padding is space-lg (20px-40px).
  */
  .with-search-gap {
    padding-top: 140px !important; 
  }
</style>
