---
import { getNavLinks, locales, type Locale } from '../lib/i18n';

interface Props {
  lang?: Locale;
}

const { lang = 'zh' } = Astro.props;
const navLinks = getNavLinks(lang);
const currentPath = Astro.url.pathname;

// 生成语言切换链接 (保持当前路径，只换语言)
function getLangSwitchUrl(targetLang: Locale): string {
  const pathWithoutLang = currentPath.replace(/^\/(zh|en|de)/, '');
  return `/${targetLang}${pathWithoutLang || ''}`;
}
---

<header>
  <nav>
    <a href={`/${lang}`} class="logo">
      <img src="/images/logo.jpg" alt="ACC ClubHub" width="40" height="40" />
      <span>ACC ClubHub</span>
    </a>

    <input type="checkbox" id="nav-toggle" class="nav-toggle" />
    <label for="nav-toggle" class="nav-toggle-label">
      <span></span>
      <span></span>
      <span></span>
    </label>

    <ul>
      {navLinks.map((link) => (
        <li>
          <a
            href={link.href}
            class:list={[{ active: currentPath === link.href || (link.href !== `/${lang}` && currentPath.startsWith(link.href)) }]}
          >
            {link.label}
          </a>
        </li>
      ))}
    </ul>

    <div class="lang-switcher">
      {locales.map((l) => (
        <a
          href={getLangSwitchUrl(l)}
          class:list={['lang-link', { active: l === lang }]}
        >
          {l.toUpperCase()}
        </a>
      ))}
    </div>
  </nav>
</header>

<style>
  header {
    background-color: transparent;
    border-bottom: 2px solid var(--color-border-rough);
    padding: 1rem 2rem;
    backdrop-filter: blur(5px);
    position: sticky;
    top: 0;
    z-index: 100;
    /* 1. 导航栏透明度 (10% transparency = 0.9 alpha) */
    background: rgba(232, 228, 217, 0.9);
  }

  nav {
    max-width: var(--max-width);
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: 1.3rem;
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .logo:hover {
    text-decoration: none;
    color: var(--color-accent);
  }

  .logo img {
    border-radius: 4px;
  }

  ul {
    display: flex;
    list-style: none;
    gap: 0.25rem;
    flex-wrap: wrap;
  }

  li a {
    font-family: var(--font-heading);
    font-weight: 500;
    font-size: 0.9rem;
    color: var(--color-text-main);
    padding: 0.25rem 0.5rem;
    position: relative;
    transition: color 0.2s ease;
  }

  li a:hover {
    color: var(--color-primary);
    text-decoration: none;
  }

  /* Hover underline — rough stroke effect */
  li a::after {
    content: '';
    position: absolute;
    bottom: -3px;
    left: 0;
    width: 0%;
    height: 3px;
    background-color: var(--color-accent);
    transition: width 0.3s ease;
    transform: rotate(-1deg);
  }

  li a:hover::after,
  li a.active::after {
    width: 100%;
  }

  li a.active {
    color: var(--color-primary);
  }

  /* Mobile hamburger toggle */
  .nav-toggle {
    display: none;
  }

  .nav-toggle-label {
    display: none;
    flex-direction: column;
    gap: 5px;
    cursor: pointer;
    padding: 4px;
  }

  .nav-toggle-label span {
    display: block;
    width: 24px;
    height: 2px;
    background: var(--color-text-main);
    transition: all 0.3s ease;
  }

  @media (max-width: 768px) {
    .nav-toggle-label {
      display: flex;
    }

    ul {
      display: none;
      width: 100%;
      flex-direction: column;
      gap: 0;
      padding-top: 1rem;
      border-top: 1px solid rgba(26, 26, 26, 0.1);
    }

    .nav-toggle:checked ~ ul {
      display: flex;
    }

    li a {
      display: block;
      padding: 0.5rem 0;
    }

    .nav-toggle:checked ~ .nav-toggle-label span:nth-child(1) {
      transform: rotate(45deg) translate(5px, 5px);
    }
    .nav-toggle:checked ~ .nav-toggle-label span:nth-child(2) {
      opacity: 0;
    }
    .nav-toggle:checked ~ .nav-toggle-label span:nth-child(3) {
      transform: rotate(-45deg) translate(5px, -5px);
    }
  }

  /* Language Switcher */
  .lang-switcher {
    display: flex;
    gap: 0.25rem;
    margin-left: 1rem;
  }

  .lang-link {
    font-family: var(--font-heading);
    font-size: 0.75rem;
    font-weight: 600;
    padding: 0.2rem 0.4rem;
    color: var(--color-text-main);
    opacity: 0.6;
    transition: opacity 0.2s ease, color 0.2s ease;
  }

  .lang-link:hover {
    opacity: 1;
    text-decoration: none;
  }

  .lang-link.active {
    opacity: 1;
    color: var(--color-primary);
    border-bottom: 2px solid var(--color-accent);
  }

  @media (max-width: 768px) {
    .lang-switcher {
      margin-left: auto;
      margin-right: 1rem;
    }
  }
</style>
